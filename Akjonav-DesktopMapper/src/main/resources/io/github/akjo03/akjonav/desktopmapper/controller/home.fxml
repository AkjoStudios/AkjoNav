<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.github.akjo03.akjonav.desktopmapper.controller.HomeController"
      prefWidth="800.0"
      prefHeight="600.0"
      minWidth="600"
      minHeight="300"
      spacing="10"
      alignment="CENTER"
>
    <Label fx:id="helloLabel"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0076a3; -fx-padding: 10;"
    />

    <Button onAction="#sayHello"
            prefHeight="80"
            maxHeight="80"
            minHeight="80"
            prefWidth="200"
            maxWidth="200"
            minWidth="200"
    >Say Hello</Button>
</VBox>